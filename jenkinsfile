pipeline 
  {
    agent any
      tools 
        {
          maven 'Maven'
        }
    stages 
        {
          stage('Initialize')
            {
              steps
                {
                  sh ''' 
                        echo "PATH = ${PATH}"
                        echo "M2_HOME = ${M2_HOME}"
                     '''
                }
            }
          stage('Source Composition Analysis')
            {
              steps
                {
                  sh 'rm owasp* || true'
                  sh 'wget "https://raw.githubusercontent.com/kamalmurthy/webapp/master/odc.sh"'
                  sh 'chmod +x odc.sh'
                  sh 'bash odc.sh'
                }
              }
          stage('Build')
            {
              steps
                {
                  sh 'mvn clean package'
                }
              }
          stage('Deploy-to-Tomcat')
            {
              steps
                {
                  sshagent(['tomcat'])
                    {
                      sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@34.235.167.30:/prod/apache-tomcat-10.0.0-M5/webapps/webapp.war'
                    }
                }
            }
        }
  }
