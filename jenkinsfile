pipeline 
  {
    agent any
      tools 
        {
          maven 'Maven'
        }
    stages 
        {
          stage('Initialize')
            {
              steps
                {
                  sh ''' 
                        echo "PATH = ${PATH}"
                        echo "M2_HOME = ${M2_HOME}"
                     '''
                }
            }
          stage('Build')
            {
              steps
                {
                  sh 'mvn clean package'
                }
              }
          stage('Deploy-to-Tomcat')
            {
              steps
                {
                  sshagent(['tomcat'])
                    {
                      sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@54.226.178.23/prod/apache-tomcat-10.0.0-M5/webapps/webapps.war'
                    }
                }
            }
        }
  }
